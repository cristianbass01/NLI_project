{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Flutter",
            "type": "dart",
            "request": "launch",
            "program": "${workspaceFolder}/demo/frontend/lib/main.dart",
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/demo/backend/server.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                //"--no-debugger",
                "--no-reload",
                "--port",
                "12345"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}